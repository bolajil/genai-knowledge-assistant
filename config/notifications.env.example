# VaultMind Push Notification Configuration
# Copy this file to notifications.env and fill in your credentials

# ============================================
# MOBILE PUSH NOTIFICATIONS
# ============================================

# Firebase Cloud Messaging (FCM) - Recommended for Android/iOS
FCM_ENABLED=false
FCM_SERVER_KEY=your_fcm_server_key_here

# OneSignal - Alternative push notification service
ONESIGNAL_ENABLED=false
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_API_KEY=your_onesignal_api_key

# Pushover - Simple push notifications (easiest to set up)
PUSHOVER_ENABLED=false
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_API_TOKEN=your_pushover_api_token

# ============================================
# SMS NOTIFICATIONS
# ============================================

# Twilio SMS
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# ============================================
# EMAIL NOTIFICATIONS
# ============================================

EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@vaultmind.ai

# ============================================
# MESSAGING PLATFORMS
# ============================================

# Telegram Bot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Slack
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Microsoft Teams
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# ============================================
# NOTIFICATION PREFERENCES
# ============================================

# Default notification channels (comma-separated)
DEFAULT_NOTIFICATION_CHANNELS=pushover,email

# Enable notifications for specific events
NOTIFY_ON_QUERY_COMPLETE=true
NOTIFY_ON_DOCUMENT_PROCESSED=true
NOTIFY_ON_SYSTEM_ALERT=true
NOTIFY_ON_USER_MENTION=true

# Minimum priority for notifications (low, normal, high, urgent)
MINIMUM_NOTIFICATION_PRIORITY=normal
